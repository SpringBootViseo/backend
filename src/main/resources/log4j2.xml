<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <!-- <RabbitMQAppender name="RabbitMQAppender" exchangeName="log4j2_exchange" routingKey="log4j2_routing_key">
             <PatternLayout pattern="%d{dd:MM:yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
             <ref bean="rabbitMQLoggingService"/>
         </RabbitMQAppender>-->

        <RabbitMQAppender name="RabbitMQAppender" queueName="OctopusQueue" exchangeName="OctopusExchange" routingKey="OctopusRoutingKey">
            <PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </RabbitMQAppender>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RabbitMQAppender"/>
        </Root>
    </Loggers>
</Configuration>